# ---------------------------------------------------------------------------
# .sqlcmd initialization file for sqlcmd

[vars]

[logger_root]
level: info
handlers: h1, h2

[logger_org_clapper]
pattern: org.clapper
level: debug
handlers: h1

[logger_org_clapper_avsl]
pattern: org.clapper.avsl
level: info
handlers: h1, h2

[logger_baz]
pattern: grizzled.
level: error
handlers: h1

[handler_h1]
level: debug
class: FileHandler
path: /tmp/log
formatter: f2
append: true

[handler_h2]
level: trace
class: ConsoleHandler
formatter: f1

[formatter_f1]
class: DefaultFormatter
format: [%Y/%M/%d %h:%m:%s:%S] (%l) %t

[formatter_f2]
class: DefaultFormatter
format: [%Y/%M/%d %h:%m:%s:%S] (%l) %C: %t

